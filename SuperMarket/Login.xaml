<Window x:Class="SuperMarket.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SuperMarket"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
        Title="Login"  Width="400" Height="200" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="Images/login.png" />
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <Image Source="Images/supermarket.png"/>
        </DockPanel>
        <DockPanel Grid.Column="1">
            <Button Name="login" Background="#FF70B7F0" Content="Login" Click="Login_Click" Margin="15 0" Width="150"  Height="50" />
        </DockPanel>
    </Grid>
</Window>
